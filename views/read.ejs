<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
      <h1 class="text-3xl tracking-tight mb-5 text-zinc-400">All User</h1>
      <div class="users flex flex-wrap gap-3">
        <% if(users.length>0){%> <% users.forEach(function(user){%>
        <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
          <div class="user w-full h-72 rounded-lg bg-zinc-700">
            <img class="w-full h-full object-center" src="<%= user.image%>" />
          </div>
          <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
          <h5 class="text-zinc-500"><%= user.email %></h5>
          <div class="flex gap-3 mt-10">
            <a class="text-zinc-200" href="/edit/<%= user._id %>">Edit User</a>
            <a class="text-red-500" href="/delete/<%= user._id %>"
              >Delete User</a
            >
          </div>
        </div>
        <% }) %> <% } else {%>
        <h2 class="text-zinc-500">No User Yet</h2>
        <% } %>
      </div>
    </div>
    <div class="back">
      <button class="button bg-green-900 px-5 rounded-lg">Back To Home</button>
    </div>
  </body>
</html>
